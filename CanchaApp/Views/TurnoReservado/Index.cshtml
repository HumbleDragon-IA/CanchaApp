@using CanchaApp.Modelo;

@model IEnumerable<CanchaApp.Modelo.TurnoReservado>


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                Tamaño Cancha
            </th>
            <th>
                Tipo Piso

            </th>

            <th>
                Apellido
            </th>
            <th>
                Nombre
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.IdCanchaNavigation.IdCapacidadNavigation.Tamaño)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCanchaNavigation.IdTipoPisoNavigation.TipoPiso1)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Nombre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
