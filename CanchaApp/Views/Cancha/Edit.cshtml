@model CanchaApp.Modelo.Cancha

@{
    ViewData["Title"] = "Edit";
}

<h1></h1>

<h4>Editar Cancha</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdCapacidad" class="control-label"></label>
               @*  <select asp-for="IdCapacidad" class="form-control" asp-items="ViewBag.IdCapacidad"></select> *@
                <select asp-for="IdCapacidad" class="form-control" id="IdCapacidadSelect">
                    <option value="">Seleccione una Capacidad</option>
                    @{
                        foreach (var capacidad in ViewBag.Capacidades)
                        {
                            <option value="@capacidad.Id">@capacidad.Tamaño </option>
                        }
                    }
                </select>
                <span asp-validation-for="IdCapacidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoPiso" class="control-label"></label>
                @* <select asp-for="IdTipoPiso" class="form-control" asp-items="ViewBag.IdTipoPiso"></select> *@
                <select asp-for="IdTipoPiso" class="form-control" id="IdTipoPisoSelect">
                    <option value="">Seleccione un Tipo de Piso</option>
                    @{
                        foreach (var tipo in ViewBag.TipoPisos)
                        {
                            <option value="@tipo.Id">@tipo.TipoPiso1 </option>
                        }
                    }
                </select>
                <span asp-validation-for="IdTipoPiso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
