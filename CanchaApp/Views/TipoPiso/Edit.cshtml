@model CanchaApp.Modelo.TipoPiso

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h5>Tipo de Piso</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TipoPiso1" class="control-label"></label>
                <select asp-for="TipoPiso1" class="form-control" id="TipoPiso1Select">
                    <option value="">Seleccione un Turno</option>
                    @{
                        foreach (var pisos in ViewBag.TipoPisos)
                        {
                            <option value="@pisos.Id">@pisos.TipoPiso1 </option>
                        }
                    }
                </select>
                @* <input asp-for="TipoPiso1" class="form-control" /> *@
                <span asp-validation-for="TipoPiso1" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
