@model IEnumerable<CanchaApp.Modelo.Cancha>

@{
    ViewData["Title"] = "Index";
}

<h4>Canchas</h4>

<p>
    <a asp-action="Create" class="btn btn-success">Crear nueva Cancha</a>
</p>
<div class="marco">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCapacidadNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoPisoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCapacidadNavigation.Tamaño)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoPisoNavigation.TipoPiso1)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id " class="btn btn-primary">Editar Cancha</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar Cancha</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>