@model CanchaApp.Modelo.TurnoReservado

@{
    ViewData["Title"] = "Edit";
}

<h1></h1>

<h4>Editar Turno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                @* <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select> *@
                <select asp-for="IdUsuario" class="form-control" id="IdUsuarioSelect">
                    <option value="">Seleccione un Turno</option>
                    @{
                        foreach (var usuario in ViewBag.Usuarios)
                        {
                            <option value="@usuario.Id">@usuario.Nombre @usuario.Apellido</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTurno" class="control-label"></label>
                @* <input asp-for="IdTurno" class="form-control" /> *@
                <select asp-for="IdTurno" class="form-control" id="IdTurnoSelect">
                    <option value="">Seleccione un Turno</option>
                    @{
                        foreach (var turnos in ViewBag.Turnos)
                        {
                            <option value="@turnos.Id">@turnos.HoraInicio</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdTurno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCancha" class="control-label"></label>
                @*  <select asp-for="IdCancha" class="form-control" asp-items="ViewBag.IdCancha"></select> *@
                <select asp-for="IdCancha" class="form-control" id="IdCanchaSelect">
                    <option value="">Seleccione una Cancha</option>
                    @{
                        foreach (var canchas in ViewBag.Canchas)
                        {
                            <option value="@canchas.cancha.Id">@canchas.piso @canchas.capacidad</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdCancha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
